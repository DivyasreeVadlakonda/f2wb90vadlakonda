extends layout

block content
  h1= title
  - var results = [{Pigment : "Gold", Power: 24, Location: "Europe"},{Pigment : "Black", Power: 21, Location : "Zimbabwe"},{Pigment : "Striped", Power:31, Location : "Africa"}]
  div(class = "container-fluid")
   div(class = "row")
    each item in results
     div(class = "col-sm-2", onclick=`buy(${index})`) Pigment: #{item["Pigment"]}<br>
     div(class = "col-sm-2", onclick=`buy(${index})`) Power: #{item["Power"]}<br>
     div(class = "col-sm-2", onclick=`buy(${index})`) Location: #{item["Location"]}

  script.
    function buy(index) {
        alert("You purchased item " + index)
    }